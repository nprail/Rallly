        //-             span.event-count= eventCount
        //-             |  Events Created
        //-         .actions
        //-             a.button.primary(href='/new') Schedule an Event
        //-             a.button(href='/example') View Demo
        section#footer.footer-section: .container
            footer.footer
                .logo.footer-col
                    img(src='/images/logo_light.png', width='100')
                .menu.footer-col
                    h6 Menu
                    ul.links
                        li: a(href='#', scroll-to='intro') Home
                        li: a(href='#', scroll-to='features') Features
                        li: a(href='#', scroll-to='about') About
                        li: a(href='mailto:me@lukevella.com') Contact
                .social.footer-col
                    h6 Social
                    ul.links
                        li: a(href='http://twitter.com/imlukevella') Twitter
                        li: a(href='http://dribbble.com/lukevella') Dribbble
                        li: a(href='http://github.com/lukevella/Rallly') GitHub
                .about.footer-col
                    h6 About
                    p
                        | Rallly was designed &amp; developed by
                        a(href='http://lukevella.com') Luke Vella
                        | . If you'd like to stay up to date on new projects,
                        | please follow on
                        a(href='http://twitter.com/imlukevella') Twitter
                        | ,
                        a(href='http://dribbble.com/lukevella') Dribbble
                        |  and
                        a(href='http://github.com/lukevella/Rallly') GitHub
                        | .
